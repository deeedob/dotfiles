{
  "version": 6,
  "configurePresets": [
    {
      "name": "Base + Declarative Dev",
      "description": "Build Base + Declarative with development support",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/base_declarative",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_PREFIX_PATH": "/usr/lib/llvm14/lib/cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "FEATURE_developer_build": "ON",
        "QT_BUILD_SUBMODULES": "qtbase;qtdeclarative;qttools;qtdoc",
        "QT_NAMESPACE": "B",
        "QT_UNITY_BUILD": "ON",
        "QT_UNITY_BUILD_BATCH_SIZE": "32",
        "QT_BUILD_TESTS": "ON",
        "QT_BUILD_EXAMPLES": "ON",
        "QT_BUILD_TESTS_BY_DEFAULT": "OFF",
        "QT_BUILD_EXAMPLES_BY_DEFAULT": "OFF",
        "WARNINGS_ARE_ERRORS": "OFF"
      },
      "environment": {
        "QDOC_SHOW_INTERNAL": "1"
      }
    }
  ]
}

