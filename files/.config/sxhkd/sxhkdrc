# open new terminal
super + Return
    alacritty

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# launch rofi
super + @space
    $HOME/.config/rofi/launcher.sh

# Toggle right click context menu.
~button3
	  xqp 0 $(xdo id -N Bspwm -n root) && jgmenu_run 

# Save screenshot to file with clipboard
ctrl + shift + Print
	$HOME/.scripts/screenshot --full

# Screenshot Area
Print
	$HOME/.scripts/screenshot --area-cb

# Screenshot Area and save it
ctrl + Print
        $HOME/.scripts/screenshot --full

#################
#   mediakeys   #
#################

# Volume Up
XF86AudioRaiseVolume
  amixer sset Master 5%+ && $HOME/.config/eww/Misc/scripts/volume

# Volume Down
XF86AudioLowerVolume
  amixer sset Master 5%- && $HOME/.config/eww/Misc/scripts/volume

# Volume Mute
XF86AudioMute
  amixer sset Master toggle && $HOME/.config/eww/Misc/scripts/volume

# Brightness Up
XF86MonBrightnessUp
  brightnessctl s 20+ && $HOME/.config/eww/Misc/scripts/brightness

# Brightness Down
XF86MonBrightnessDown
  brightnessctl s 20- && $HOME/.config/eww/Misc/scripts/brightness

# Play music
XF86AudioPlay 
        playerctl play

# Pause music
XF86AudioPause
	playerctl pause

# Music next
XF86AudioNext
	playerctl next

# Music previous
XF86AudioPrev
	playerctl previous

#################
# bspwm hotkeys #
#################

# quit/restart bspwm
super + alt + {q,r}
    bspc {quit,wm -r}

# close and kill node
super + {_,shift +}w
    bspc node -{c,k}

# alternate between tiled and monocle
super + m
    bspc desktop -l next

# set window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#
# focus / swap / move
#

# change through layout
super + {r, shift + r}
    bsp-layout {next,previous}

# send window to virt desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f, node -d} '^{1-9,10}'

# focus node in given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# move a floating window
super + {Left,Down,Up,Right}
    bspc noce -v {-20 0, 0 20, 0 -20, 20 0}
