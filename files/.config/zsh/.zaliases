alias ls='exa --icons --color=always'
alias ll='ls --long --tree --level=$0'

alias ll='_ll() { 
  if [ ! -z "$1" ]
    then
      ls --long --tree --level="$1";
    else
      ls --long --tree --level=1;
  fi
  };
  _ll'

alias la='_la() { 
  if [ ! -z "$1" ]
    then
      ls --long --tree --all --level="$1";
    else
      ls --long --tree --all --level=1;
  fi
  };
  _la'

lspac() { pacman -Qen | expac --timefmt='%F %T' '%n %v %l' - | sort -k3 }


