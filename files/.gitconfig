[user]
	email = dennis.ob@protonmail.com
	name = deeedob
[alias]
	ci = commit
	st = status
	sub = submodule update --remote --merge
	di = diff
	co = checkout
	ann = blame
[core]
	editor = vim
	autocrlf = input
	pager = less -FRSX
[credential]
	helper = cache --timeout=36000
# Enforce SSH
[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
  insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
  insteadOf = https://bitbucket.org/
[commit]
	template = qt6/.commit-template
[rerere]
	enabled = true
[rebase]
	stat = true
[color]
	ui = auto
