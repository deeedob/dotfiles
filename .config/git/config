	autocrlf = input
	pager = less -FRSX
	excludefile = ~/.config/git/gitignore_global
	whitespace = trailing-space,-space-before-tab,cr-at-eol
[diff]
	tool = meld
[difftool]
	prompt = false
[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"
[merge]
	tool = "meld"
[mergetool]
	prompt = false
[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[commit]
	template = ~/.config/git/git-commit-template
[alias]
	ci = commit
	st = status
	sub = submodule update --remote --merge
	di = diff
	co = checkout
	ann = blame
